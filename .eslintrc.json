// @see http://eslint.cn/docs/user-guide/configuring
{
  // env：你的脚本将要运行在什么环境中
  "env": {
      "browser": true,
      "es6": true
  },
  // globals：脚本在执行期间访问的额外的全局变量
  "globals": {
      "$": true,
      "process": true,
      "__dirname": true
  },
  // 指定ESLint使用的解析器，默认是Espree
  "parser": "@typescript-eslint/parser",
   // 指定想要支持的 JavaScript 语言选项
  "parserOptions": {
      "ecmaFeatures": {
          "experimentalObjectRestSpread": true,
          "tsx": true,
          "modules": true
      },
      "sourceType": "module",
      "ecmaVersion": 7
  },
   //让eslint支持 JSX start
  "plugins": ["react", "prettier"],
  // 继承已启用的规则
  "extends": ["eslint:recommended", "prettier"],
  // 启用的规则及其各自的错误级别。自定义启用或关闭一些规则
  "rules": {
      "react/jsx-uses-react": 1,
      "prettier/prettier": "error", // 不符合 prettier 规则的代码，要进行错误提示（红线）
      "no-unused-vars": 0, //变量声明未被使用校验
      "no-empty": 0,
      "quotes": 0, //单引号
      "jsx-quotes": 0,
      "no-console": 0, //不禁用console
      "no-debugger": "warn"
  }
}